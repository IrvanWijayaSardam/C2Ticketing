<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D4E0FF"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.ui.flitpay.ConfirmPaymentFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clHeaderFragmentConfirmPayment"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/primary_blue_1"
        >
        <ImageView
            android:id="@+id/ivBackFromFragmentConfirmPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:src="@drawable/ic_baseline_arrow_back"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0" />
        <TextView
            android:id="@+id/tvFragmentConfirmPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_airport"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="30dp"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="18sp"
            android:textColor="@color/background_color_white"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/clHeaderFragmentConfirmPayment"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/background_flit_pay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/clHeaderFragmentConfirmPayment"
        android:layout_marginTop="90dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="30dp"
            android:background="@color/background_color_white"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:id="@+id/ivLogoFlitFragmentConfirmPayment"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_logo_4_blue"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="30dp"
                    app:layout_constraintVertical_bias="0"
                    />
                <LinearLayout
                    android:id="@+id/llOneFragmentConfirmFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ivLogoFlitFragmentConfirmPayment"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="13/12/2022"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/primary_font_color"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="21:55"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/primary_font_color"
                        />
                    <TextView
                        android:layout_width="450dp"
                        android:layout_height="wrap_content"
                        android:text="FLIT ID 082143338476"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/primary_font_color"
                        />
                </LinearLayout>
                <View
                    android:id="@+id/vOneFragmentConfirmPayment"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/secondary_font_color"
                    app:layout_constraintTop_toBottomOf="@+id/llOneFragmentConfirmFragment"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    />
                <LinearLayout
                    android:id="@+id/llTwoFragmentConfirmPayment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/vOneFragmentConfirmPayment"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_logo_check"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Transaction Succes"
                        android:fontFamily="@font/poppins"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/primary_font_color"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llThreeFragmentConfirmPayment"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:background="#D4E0FF"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/llTwoFragmentConfirmPayment"
                    android:layout_marginTop="10dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total Pay"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/primary_font_color"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Rp 2.000.000"
                        android:textAlignment="textEnd"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/primary_font_color"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llFourFragmentConfirmPayment"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/llThreeFragmentConfirmPayment"
                    android:orientation="horizontal"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Metode Pembayaran"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/primary_font_color"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Saldo FLIT"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/primary_font_color"
                        android:textAlignment="textEnd"
                        />
                </LinearLayout>
                <View
                    android:id="@+id/vTwoFragmentConfirmPayment"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@+id/llFourFragmentConfirmPayment"
                    android:background="@color/secondary_font_color"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    />
                <TextView
                    android:id="@+id/tvIdTransaksiFragmentConfirmPayment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Detail Transaction"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/vTwoFragmentConfirmPayment"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/primary_font_color"
                    android:layout_margin="10dp"
                    android:textSize="15sp"
                    />
                <LinearLayout
                    android:id="@+id/llFiveFragmentConfirmPayment"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvIdTransaksiFragmentConfirmPayment"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NAMA"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/secondary_font_color"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textAlignment="textEnd"
                        android:text="Moehamad Ro Isul Jihad"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/primary_font_color"
                        tools:ignore="RtlCompat" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llSixFragmentConfirmPayment"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/llFiveFragmentConfirmPayment"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID TRANSACTION"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/secondary_font_color"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textAlignment="textEnd"
                        android:text="082143338476 082143338476"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/primary_font_color"
                        tools:ignore="RtlCompat" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llSevenFragmentConfirmPayment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/llSixFragmentConfirmPayment"
                    >
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="bantuan"
                        android:layout_margin="10dp"
                        />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="bagikan"
                        android:layout_margin="10dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/llSevenFragmentConfirmPayment"
                    android:gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Diamankan oleh"
                        android:layout_marginEnd="5dp"
                        android:fontFamily="@font/poppins"
                        android:textSize="12sp"
                        android:textColor="@color/primary_font_color"
                        />
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/ic_logo_v2_blue"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Flit protection"
                        android:layout_marginEnd="5dp"
                        android:fontFamily="@font/poppins"
                        android:textSize="12sp"
                        android:textColor="@color/primary_font_color"
                        />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>