<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color_white"
    tools:context=".view.ui.home.HomeFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/llinGreetings"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="27dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvGreeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:text="@string/good_morning"
                android:textColor="@color/secondary_font_color"
                android:textSize="12sp"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:id="@+id/tvUsernameOrLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/roisul"
                android:textSize="15sp"/>
        </LinearLayout>
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="@string/hope_you_enjoy_and_have_the_best_trip"
            android:textColor="@color/secondary_font_color"
            app:layout_constraintTop_toBottomOf="@+id/llinGreetings"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="27dp"
            />

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintLeft_toRightOf="@+id/llinGreetings"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="1"/>

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/image_slider"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            app:iss_auto_cycle="true"
            app:iss_delay="0"
            android:background="@color/toska_variant"
            app:iss_period="2000"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_profile"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvSearchAirportFragmentHome"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_margin="15dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="7dp"
            app:layout_constraintTop_toBottomOf="@+id/image_slider"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/llBookFrom"
                    android:layout_width="120dp"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_light"
                        android:text="@string/from"
                        android:textSize="10sp"
                        android:layout_marginBottom="10dp"
                        android:textAlignment="center"
                        android:layout_marginTop="20dp"
                        />
                    <TextView
                        android:id="@+id/tvFromAirportCodeFragmentHome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/airport_code"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/primary_font_color"
                        android:textSize="22sp"
                        android:textAlignment="center"/>
                    <TextView
                        android:id="@+id/tvFromAirportNameFragmentHome"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/airport_name"
                        android:textSize="10sp"
                        android:textAlignment="center"
                        android:fontFamily="@font/poppins"
                        />

                </LinearLayout>
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:src="@drawable/img_arrow"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/llBookFrom"
                    app:layout_constraintRight_toLeftOf="@+id/llBookTo"
                    app:layout_constraintBottom_toTopOf="@+id/btnSearchFragmentHome"
                    />

                <Button
                    android:id="@+id/btnSearchFragmentHome"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/custom_button"
                    android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:elevation="@dimen/cardview_default_elevation"
                    android:text="@string/search"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/llBookFrom"
                    app:layout_constraintRight_toLeftOf="@+id/llBookTo"
                    tools:ignore="TouchTargetSizeCheck" />
                <LinearLayout
                    android:id="@+id/llBookTo"
                    android:layout_width="120dp"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_light"
                        android:text="@string/to"
                        android:textSize="10sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:textAlignment="center"/>
                    <TextView
                        android:id="@+id/tvToAirportCodeFragmentHome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/select"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/variant_color_orange"
                        android:textSize="22sp"
                        android:textAlignment="center"/>
                    <TextView
                        android:id="@+id/tvToAirportNameFragmentHome"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/airport_name"
                        android:textSize="10sp"
                        android:textAlignment="center"
                        android:fontFamily="@font/poppins"
                        />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvRecentSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recent_search"
            android:gravity="left"
            android:padding="10dp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/primary_font_color"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cvSearchAirportFragmentHome"
            app:layout_constraintStart_toStartOf="@+id/cvSearchAirportFragmentHome"
            />

        <TextView
            android:id="@+id/tvClearAllRecent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clear_all"
            android:gravity="right"
            android:padding="10dp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/primary_font_color"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cvSearchAirportFragmentHome"
            app:layout_constraintEnd_toEndOf="@+id/cvSearchAirportFragmentHome"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRecentSearchHomeFragment"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            tools:listitem="@layout/item_recent_search"
            app:layout_constraintTop_toBottomOf="@+id/tvClearAllRecent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCardMyTripHomeFragment"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginTop="15dp"
            tools:listitem="@layout/item_card_trip"
            app:layout_constraintTop_toBottomOf="@+id/rvRecentSearchHomeFragment"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>