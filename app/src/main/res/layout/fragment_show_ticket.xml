<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color_white"
    tools:context=".view.ui.booking.ShowTicketFragment">

    <ImageView
        android:id="@+id/ivGotoBackFromFragmentShowTicket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:src="@drawable/ic_baseline_arrow_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0"
        />
    <TextView
        android:id="@+id/tvDepartureFlightFragmentShowTicket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/departure_flight"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="30dp"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="18sp"
        android:textAlignment="center"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/cvShowTicketLocationOneFragmentShowTicket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvDepartureFlightFragmentShowTicket"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="7dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">
            <LinearLayout
                android:id="@+id/llShowTicketFromFragmentShowTicket"
                android:layout_width="0dp"
                android:layout_height="150dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/ivLogoTripFragmentShowTicket"
                android:orientation="vertical"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/tvFromAirportCodeFragmentShowTicket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/airport_code"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/primary_font_color"
                    android:textSize="22sp"
                    android:textAlignment="center"
                    android:layout_marginTop="30dp"/>
                <TextView
                    android:id="@+id/tvFromLocationNameFragmentShowTicket"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/location_name"
                    android:textSize="10sp"
                    android:textAlignment="center"
                    android:fontFamily="@font/poppins"
                    />

            </LinearLayout>
            <ImageView
                android:id="@+id/ivLogoTripFragmentShowTicket"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="40dp"
                android:src="@drawable/img_arrow"
                />
            <LinearLayout
                android:id="@+id/llShowTicketToFramgentShowTicket"
                android:layout_width="0dp"
                android:layout_height="150dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/ivLogoTripFragmentShowTicket"
                android:orientation="vertical"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/tvToAirportCodeFragmentShowTicket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/airport_code"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/primary_font_color"
                    android:textSize="22sp"
                    android:textAlignment="center"
                    android:layout_marginTop="30dp"/>
                <TextView
                    android:id="@+id/tvToLocationNameFragmentShowTicket"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/location_name"
                    android:textSize="10sp"
                    android:textAlignment="center"
                    android:fontFamily="@font/poppins"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tvDayAndDateTicketFragmentShowTicket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/day_date"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins"
                android:textSize="15sp"
                android:textColor="@color/primary_blue_1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/llShowTicketFromFragmentShowTicket"
                />
            <TextView
                android:id="@+id/tvNameClassFragmentShowTicket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/name_class"
                android:textAlignment="center"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/primary_font_color"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDayAndDateTicketFragmentShowTicket"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/tvNameClassFragmentShowTicket"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0"
                >
                <TextView
                    android:id="@+id/tvCountTicketFragmentShowTicket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/countShowTicket"
                    android:textAlignment="center"
                    android:fontFamily="@font/poppins"
                    android:layout_margin="2.5dp"
                    android:textColor="@color/primary_blue_1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/adult"
                    android:fontFamily="@font/poppins"
                    android:layout_margin="2.5dp"
                    android:textColor="@color/primary_blue_1"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cvShowTicketLocationOneFragmentShowTicket"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardElevation="7dp"
        app:cardCornerRadius="10dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/llMoreInfoFragmentShowTicket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="end"
                android:background="@color/primary_blue_1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                >
                <TextView
                    android:id="@+id/tvMoreInfoFragmentShowTicket"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Save up to IDR 3,800 for Roundtrip"
                    android:textAlignment="textEnd"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_light"
                    android:textColor="@color/background_color_white"
                    />
            </LinearLayout>
            <ImageView
                android:id="@+id/ivLogoShowTicketFragmentShowTicket"
                android:layout_width="70dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@+id/llMoreInfoFragmentShowTicket"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="1"
                android:src="@drawable/ic_logo_4_blue"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                />
            <TextView
                android:id="@+id/tvNameClassFixTicketFragmentShowTicket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name_class"
                app:layout_constraintTop_toBottomOf="@+id/llMoreInfoFragmentShowTicket"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/primary_blue_1"
                android:textSize="15sp"
                />
            <TableLayout
                android:id="@+id/tlInformationFlightOneFragmentShowTicket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivLogoShowTicketFragmentShowTicket"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/flight_no"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/primary_blue_1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Dep Time"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/primary_blue_1"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Arr Time"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/primary_blue_1"
                        />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="GA209"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/primary_font_color"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="16:59"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/primary_font_color"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="07:30"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/primary_font_color"
                        />
                </TableRow>
            </TableLayout>
            <LinearLayout
                android:id="@+id/llInformationFlightTwoFramgmentShowTicket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tlInformationFlightOneFragmentShowTicket"
                >
                <TextView
                    android:id="@+id/tvInformationLongTimeFlightFragmentShowTicket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Information Long Time Flight"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/primary_font_color"
                    />
                <TextView
                    android:id="@+id/tvCountSeatsFragmentShowTicket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Count Seats"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/primary_blue_1"
                    />
            </LinearLayout>
            <TableLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/llInformationFlightTwoFramgmentShowTicket"
                >
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="30dp"/>
                </TableRow>
            </TableLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>