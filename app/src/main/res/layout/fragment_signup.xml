<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color_white"
    android:padding="30dp"
    tools:context=".view.ui.signup.SignupFragment">
    
    <ImageView
        android:id="@+id/ivGotoBackFromSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0" />
    <LinearLayout
        android:id="@+id/llLogoHeaderSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/ivGotoBackFromSignUp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="2.5dp"
            android:src="@drawable/ic_logo_v2_blue"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/slogan"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:layout_marginStart="2.5dp"
            android:fontFamily="@font/poppins_medium"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llLogoHeaderSignUp"
        app:layout_constraintVertical_bias="0"
        >

        <LinearLayout
            android:id="@+id/llEditTextSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/firstname"
                android:textSize="15sp"
                android:textColor="@color/primary_blue_1"
                android:fontFamily="@font/poppins_medium"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tIlFirstnameSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                android:layout_marginBottom="25dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tIetFirstnameSignUp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="ex: moehamad"
                />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lastname"
                android:textSize="15sp"
                android:textColor="@color/primary_blue_1"
                android:fontFamily="@font/poppins_medium"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tIlLastnameSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                android:layout_marginBottom="25dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tIetLastnameSignUp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="ex: roisul"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textSize="15sp"
                android:textColor="@color/primary_blue_1"
                android:fontFamily="@font/poppins_medium"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tIlEmailSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                android:layout_marginBottom="25dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tIetEmailSignUp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="example1001@gmail.com"
                    android:inputType="textEmailAddress"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/phone_number"
                android:textSize="15sp"
                android:textColor="@color/primary_blue_1"
                android:fontFamily="@font/poppins_medium"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tIlPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:counterEnabled="true"
                app:prefixText="+62"
                app:counterMaxLength="13"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tIetPhoneNumberSignUp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="+62 xx"
                    android:inputType="number"
                    android:maxLength="13"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/birthday_date"
                android:textSize="15sp"
                android:textColor="@color/primary_blue_1"
                android:fontFamily="@font/poppins_medium"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tIlBirthdaySignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                app:endIconMode="custom"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:endIconDrawable="@drawable/ic_baseline_date_range_24"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tIetBirthdaySignUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="15/0x/20xx"
                    android:inputType="date"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/password"
                android:textSize="15sp"
                android:textColor="@color/primary_blue_1"
                android:fontFamily="@font/poppins_medium"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tIlPasswordSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:counterEnabled="true"
                app:counterMaxLength="30"
                app:endIconMode="password_toggle"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tIetPasswordSignUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="30"
                    android:inputType="textPassword"
                    android:hint="xxxx"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/confirm_password"
                android:textSize="15sp"
                android:textColor="@color/primary_blue_1"
                android:fontFamily="@font/poppins_medium"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tIlConfPasswordSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:counterEnabled="true"
                app:counterMaxLength="30"
                app:endIconMode="password_toggle"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tIetConfPasswordSignUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="30"
                    android:inputType="textPassword"
                    android:hint="xxxx"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnApplySignUp"
                android:layout_width="172dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:text="Let's Go"
                android:textAllCaps="false"
                android:elevation="@dimen/cardview_default_elevation"
                android:background="@drawable/custom_button"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/or"
                android:textSize="15sp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/secondary_font_color"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/cvAuthWithGoogleSignUp"
                android:layout_width="200dp"
                android:layout_height="48dp"
                app:cardCornerRadius="30dp"
                android:layout_gravity="center"
                android:layout_marginBottom="7dp"
                app:cardElevation="@dimen/cardview_default_elevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_marginEnd="3.5dp"
                        android:src="@drawable/ic_logo_google"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3.5dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="@string/sign_up_with_google"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvAuthWithAppleSignUp"
                android:layout_width="200dp"
                android:layout_height="48dp"
                app:cardCornerRadius="30dp"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                app:cardElevation="@dimen/cardview_default_elevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_marginEnd="3.5dp"
                        android:src="@drawable/ic_logo_apple"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3.5dp"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Sign up with Google"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvHaveAnAccountSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/have_an_account"
                android:layout_gravity="center"
                android:textColor="@color/primary_blue_1"
                android:fontFamily="@font/poppins_semibold"/>

        </LinearLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>