<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="290dp"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="7dp"
    app:cardCornerRadius="10dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/llMoreInfoFragmentShowTicket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="end"
            android:background="@color/primary_blue_1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            >
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tvBookingId"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="BOOKING CODE : 27836278362873"
                    android:textAlignment="textStart"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_light"
                    android:textColor="@color/background_color_white"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    app:cardCornerRadius="50dp"
                    >
                    <TextView
                        android:id="@+id/tvTripType"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/roundtrip"
                        android:textSize="10sp"
                        android:background="#46E3E3"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                app:cardCornerRadius="50dp"
                >
                <TextView
                    android:id="@+id/tvPaymentStatusItemBooking"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="PAID"
                    android:background="#3FE604"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <ImageView
            android:id="@+id/ivLogoShowTicketFragmentShowTicket"
            android:layout_width="70dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/llMoreInfoFragmentShowTicket"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="1"
            android:src="@drawable/ic_logo_4_blue"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            />
        <TextView
            android:id="@+id/tvUsernameItemBooking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/username"
            app:layout_constraintTop_toBottomOf="@+id/llMoreInfoFragmentShowTicket"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/primary_blue_1"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/tvFlightClassItemBooking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_class"
            app:layout_constraintTop_toBottomOf="@+id/tvUsernameItemBooking"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/primary_blue_1"
            android:textSize="15sp"
            />
        <TableLayout
            android:id="@+id/tlInformationFlightOneFragmentShowTicket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivLogoShowTicketFragmentShowTicket"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Flight Number"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/primary_blue_1"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/tvFlightNumberDepItemBooking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="GA209"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/primary_font_color"
                    />

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/tvFlightNumberReturnItemBooking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="GA209"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/primary_font_color"
                    />

            </TableRow>

        </TableLayout>

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tlInformationFlightOneFragmentShowTicket" />

        <View
            android:id="@+id/vVerticalLinedCvShowTicket"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:background="@color/secondary_font_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tableLayout"
            app:layout_constraintTop_toBottomOf="@+id/tlInformationFlightOneFragmentShowTicket"
            app:layout_constraintHorizontal_bias="0.05"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            app:layout_constraintBottom_toTopOf="@+id/ivAddBackPackCvShowTicket"
            app:layout_constraintLeft_toRightOf="@+id/vVerticalLinedCvShowTicket"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tlInformationFlightOneFragmentShowTicket">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Price"
                android:textColor="@color/primary_font_color"
                android:fontFamily="@font/poppins"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/tvTotalPriceItemBooking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IDR x,xxx.xxx"
                android:textColor="@color/primary_font_color"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="12sp"
                android:layout_marginBottom="5dp"
                />

        </LinearLayout>
        <ImageView
            android:id="@+id/ivAddBackPackCvShowTicket"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_add_box_24"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>